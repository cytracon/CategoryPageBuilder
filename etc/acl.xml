<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Cytracon_Core::extensions" title="Cytracon">
                    <resource id="Cytracon_CategoryPageBuilder::categorypagebuilder" title="Category Page Builder" sortOrder="10">
                        <resource id="Cytracon_CategoryPageBuilder::profile" title="Profile" translate="title" sortOrder="10">
                            <resource id="Cytracon_CategoryPageBuilder::profile_save" title="Save Profile" sortOrder="10" />
                            <resource id="Cytracon_CategoryPageBuilder::profile_delete" title="Delete Profile" sortOrder="20" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Cytracon_CategoryPageBuilder::settings" title="Category Page Builder" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>